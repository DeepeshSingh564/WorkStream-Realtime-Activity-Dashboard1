modules = ["web", "nodejs-20", "python-3.10"]

run = "redis-server --port 6379 & python3 -m daphne -b 0.0.0.0 -p 3000 django_project.asgi:application"

[deployment]
run = "redis-server --port 6379 & python3 -m daphne -b 0.0.0.0 -p 3000 django_project.asgi:application"
deploymentTarget = "gce"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 6379

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
packages = ["redis"]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "daphne -b 0.0.0.0 -p 5000 django_project.asgi:application"
waitForPort = 5000
